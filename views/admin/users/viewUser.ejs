<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head.ejs') %>

  <body class="admin-body">
    <%- include('../../partials/admin/admin-navbar.ejs') %>

    <%- include('../../partials/admin/admin-sidebar.ejs') %>
      <section class="container">
        <div class="row">
          <div class="card form-card mt-5  mx-auto" style="width: 50rem;">
            <div class="card-body  text-center">
              <h5 class="card-title fw-bold text-decoration-underline ">
                <%= users.name  %>
              </h5>
              <p class="card-text">Email:<%= users.email %>
              </p>
              <p class="card-text">Phone No: <%= users.phone %>
              </p>
              <p class="card-text">TotalOrders:<%= users.totalOrders %>
              </p>
              <p class="card-text">TotalSpent:<%= users.totalSpent %>
              </p>
              <p class="card-text details text-secondary">Account Created On: <%= users.createdOn %>
              </p>
              <p class="card-text details text-secondary">Last Updated: <%= users.updatedOn %>
              </p>
              <a href="/admin/users" class="btn border-dark  btn-outline-dark">Go Back</a>
            </div>
          </div>
        </div>
      </section>
      <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
      <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
      <script src="/scripts/adminScript.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
  </body>

</html>