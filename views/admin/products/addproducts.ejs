<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head.ejs') %>

  <body class="admin-body">
    <%- include('../../partials/admin/admin-navbar.ejs') %>


      <%- include('../../partials/admin/admin-sidebar.ejs') %>


        <section class="conatiner ">
          <div class="row">
            <div class="card form-card ms-auto">
              <h4 class="text-center mt-4  text-secondary ">ADD PRODUCTS</h4>
              <div class="card-body">
                <div id="liveAlertPlaceholder" >
                  <% if(message){ %>
                      <div class="alert alert-danger alert-dismissible w-50 d-block" role="alert">
                            <div><%= message %></div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                          </div>
                      <% } %>
              </div>
                <form action="/admin/addProducts" method="post" enctype="multipart/form-data">
                  <div class="d-flex mb-2">
                    <div class="form-outline input-control w-50">
                      <label class="form-label">Product Name </label>
                      <input type="text" class="form-control form-control-lg " name="productName" />
                    </div>

                    <div class="form-outline input-control w-50">
                      <label class="form-label">Brand </label>
                      <input type="text" class="form-control form-control-lg text-small  " name="brand" />
                    </div>
                  </div>
                  <div class="mb-2">
                    <label for="exampleFormControlTextarea1" class="form-label w-50">Discription</label>
                    <textarea class="form-control" autocapitalize="on" id="exampleFormControlTextarea1"
                      name="discription" rows="3"></textarea>
                  </div>

                  <div class="mb-2">
                    <label for="exampleFormControlTextarea1" class="form-label">Highlights</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" name="highlights"
                      rows="3"></textarea>
                  </div>


                  <select class="btn btn-outline-light text-black my-2" name="categoryId">
                    <option class="text-black" value="value" selected>category</option>
                    <% if(category.length>0){ %>
                      <% category.forEach(items=>{ %>
                        <option value="<%= items._id %>" class="text-black">
                          <%= items.categoryName %>
                        </option>
                        <% }) %>
                          <% } %>
                  </select>


                  <div class="form-outline input-control mb-2 ">
                    <label class="form-label">Price </label>
                    <input type="number" name="price" class="form-control form-control-sm w-50 " />
                  </div>
                    <div class="form-outline input-control mb-2 ">
                    <label class="form-label">Offer(in %) </label>
                    <input type="number" name="offer" class="form-control form-control-sm w-50 " />
                  
                  </div>
                  

                  <div class="form-outline input-control mb-2 w-50">
                    <label class="form-label">colour </label>
                    <input type="text" class="form-control form-control-sm w-50 " name="colour" />
                  </div>

                  <div class="input-group row mb-2">
                    <label class="form-label">Images of the Product</label>
                    <div class=" col-12">
                      <input type="file" accept="image/png,image/webp, image/jpg, image/jpeg" class="form-control form-control-sm mb-1" name="image1" id="image1" required>
                    </div>
                    <div class=" col-12">
                      <input type="file" accept="image/png,image/webp, image/jpg, image/jpeg" class="form-control form-control-sm mb-1" name="image2" id="image2" >
                    </div>
                    <div class=" col-12">
                      <input type="file" accept="image/png,image/webp, image/jpg, image/jpeg" class="form-control form-control-sm mb-1" name="image3" id="image3" >
                    </div>
                  </div>
                  <div class="mb-2 w-50">
                    <label class="form-label ">Total Stock</label>
                    <input type="text" class="form-control form-control-sm w-50 " name="totalStock" />
                  </div>

                  <button type="submit" class="btn btn-outline-success">Add</button>

                </form>
              </div>
            </div>
          </div>
        </section>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
          crossorigin="anonymous"></script>
        <script src="../scripts/user/script.js"></script>
  </body>

</html>