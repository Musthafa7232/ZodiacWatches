<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

  <body>
    <%- include('../partials/admin/admin-loginNavbar.ejs') %>
      <section class="vh-100">
        <div class="container-fluid h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10 d-flex align-items-center">
              <div class="card form-card w-50 m-auto p-auto">
                <div class="row">

                  <div class=" d-flex align-items-center">
                    <div class="card-body  p-auto p-lg-5 text-black ">

                      <form id="form" action='/admin' method='POST'>
                        <h5 class="fw-bold mb-3 pb-3 sign text-center">AdminLogin</h5>
                        <span class="text-danger">
                          <%= message %>
                        </span>
                        <div class="form-outline input-control mb-3 ">
                          <input type="text" id="email" class="form-control form-control-lg " name="email" />
                          <label class="form-label">Enter an Email </label>
                          <div class="error"></div>
                        </div>

                        <div class="form-outline input-control mb-3 ">
                          <input type="password" id="password" class="form-control form-control-lg" name="password" />
                          <label class="form-label" for="form2Example27">Password</label>
                          <div class="error"></div>
                        </div>


                        <button class="btn btn-outline-dark btn-lg  " type="submit" onclick="validateLogin()">Log
                          In</button>

                      </form>

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
      <script src="../scripts/user/script.js"></script>
  </body>

</html>