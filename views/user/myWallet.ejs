<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body>

        <%- include('../partials/user/user-navbar.ejs') %>
            <div class="container">
                <div class="row my-5 px-5">
                    <div class="infos row mx-auto bg-white my-5">
                        <div class="col-lg-6 col-12">
                            <lottie-player src="https://assets4.lottiefiles.com/packages/lf20_sifvozg6.json" class="mx-auto  "  background="transparent"  speed="1"  style="width: 10rem; height: 10rem;"  loop  autoplay></lottie-player>
                            <h5>Wallet Balance</h5>
                            <h5 class=" fs-5 text-success">₹<%= user.wallet %>
                            </h5>
                        </div>
                        <div class="col-lg-6 col-12">
                            <div class="card my-3 <%= user.walletStatus.length>0?"mycard":"" %> position-relative" >
                                <div class="card-header z-3 position-sticky top-0 bg-black text-white text-center">
                                    Transaction History
                                   </div> 
                            <% if(user.walletStatus.length>0){ %>
                                          <% user.walletStatus.forEach(item=>{ %>  
                                        <div class="card-body d-flex justify-content-between fw-bold <%= item.history=="Credited"?'text-success':'text-danger' %>">
                                            <p class="text-black"><%= item.createdOn.toString().slice(0,16) %></p>
                                            <p class=""><%= item.history %></p>
                                            <p class="">₹<%= item.amount %></p>
                                        </div>
                                        <% }) %>
                                        <% }else{ %>
                                            <lottie-player src="https://assets4.lottiefiles.com/packages/lf20_RiPXC5zxuO.json" class="mx-auto"  background="transparent"  speed="1"  style="width: 300px; height: 300px;"  loop  autoplay></lottie-player>
                                            <h3>No Transaction History Available</h3>
                                            
                                            <% } %>
                                        </div>
                        </div>
                    </div>

                </div>
            </div>

            <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
            <%-include('../partials/user/footer.ejs') %>


    </body>

</html>