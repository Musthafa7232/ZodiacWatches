<!DOCTYPE html>
<html lang="en">
<html lang="en">
<%- include('../../partials/head.ejs') %>

  <body>

    <%- include('../../partials/user/guest-navbar.ejs') %>

      <section>

        <div class="container h-100" id="register-card">
          <div class="row h-100 d-flex justify-content-center align-items-center">
            <div class="col-md-5">
              <div class="login-card">
                <div class="form">
                  <span class="form__title">Sign up</span>

                  <form id="form" action='/register' method='POST'>
                    <div id="liveAlertPlaceholder" >
                      <% if(message){ %>
                          <div class="alert alert-danger alert-dismissible " role="alert">
                                <div><%= message %></div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                              </div>
                          <% } %>
                  </div>
                    <div class="form__input input-control">
                      <i class="ri-user-line"></i>
                      <input type="text" type="text" name="name" id="Name"  value="<%= register.name %>" 
                        placeholder="Name">
                      <span class="bar"></span>
                     
                    </div>
                    <div class="form__input input-control ">
                      <i class="ri-mail-line"></i>
                      <input type="text" placeholder="Email" name="email" id="email" value="<%= register.email %>" onfocusout="validateEmail()">
                      <span class="bar"></span>
                      <span class="error text-end"></span>
                    </div>
                    <div class="form__input input-control ">
                      <i class="ri-phone-line"></i>
                      <input type="tel" name="phone"   value="<%= register.phone %>" id="phone" placeholder="Phone number"
                        onfocusout="validatePhone()" />
                      <span class="bar"></span>
                      <span class="error text-end"> <span>
                    </div>
                    <div class="form__input input-control">
                      <i class="ri-lock-line"></i>
                      <input type="password" placeholder="Password"  name="password" id="password"
                       >
                      <span class="bar"></span>
                     
                    </div>
                    <div class="form__input input-control">
                      <i class="ri-lock-line"></i>
                      <input type="password" placeholder="Confirm password" name="confirmPassword" id="password2"
                       >
                      <span class="bar"></span>
                      
                    </div>
                    <button type="submit" class="form__button" id="submit" >Sign
                      up</button>
                    <span class="form__switch">
                      Already have an account? <a href="/login">Login</a>
                    </span>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <%- include('../../partials/user/footer.ejs') %>
  </body>

</html>