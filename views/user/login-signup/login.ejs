<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head.ejs') %>

  <body>

    <%- include('../../partials/user/guest-navbar.ejs') %>

      <section id="loginPage">

        <div class="container h-100" id="register-card">
          <div class="row h-100 d-flex justify-content-center align-items-center">
            <div class="col-md-5">
              <div class="login-card">
                <div class="form">
                  <span class="form__title">Sign In</span>

                  <form id="Form" action='/login' method='POST'>
                    <div id="liveAlertPlaceholder" >
                      <% if(message){ %>
                          <div class="alert alert-danger alert-dismissible " role="alert">
                                <div><%= message %></div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                              </div>
                          <% } %>
                  </div>
                    <div class="form__input input-control ">

                      <i class="ri-mail-line"></i>
                      <input type="text" placeholder="Email" value="<%= user %>" name="email" id="email1"
                        onfocusout="validateEmail()">
                      <span class="bar"></span>
                    </div>

                    <div class="form__input input-control">
                      <i class="ri-lock-line"></i>
                      <input type="password" placeholder="Password" type="password" name="password" id="password"
                        onfocusout="validatePassword()">
                      <span class="bar"></span>
                    </div>

                    <a class=" btn text-secondary " onclick="forgetPass()">Forgot Password?</a>

                    <button type="submit" class="form__button">Sign
                      up</button>
                    <span class="form__switch">
                      Don't have an account? <a href="/register">Register</a>
                    </span>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      


      <%- include('../../partials/user/footer.ejs') %>

     
  </body>

</html>